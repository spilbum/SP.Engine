<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OperationTool.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:OperationTool.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="OperationTool">

    <TabBar>
        <Tab>
            <ShellContent
                Title="Version"
                Route="VersionTab"
                ContentTemplate="{DataTemplate pages:VersionTabPage}" />
            <ShellContent
                Title="Maintenance"
                Route="MaintenanceTab"
                ContentTemplate="{DataTemplate pages:MaintenanceTabPage}" />
            <ShellContent
                Title="Patch"
                Route="PatchTab"
                ContentTemplate="{DataTemplate pages:PatchTabPage}" />
            <ShellContent
                Title="Diff"
                Route="DiffTab"
                ContentTemplate="{DataTemplate pages:RefsDiffTabPage}" />
            <ShellContent
                Title="Sql"
                Route="SqlTab"
                ContentTemplate="{DataTemplate pages:RefsSqlTabPage}" />
            <ShellContent
                Title="Settings"
                Route="SettingsTab"
                ContentTemplate="{DataTemplate pages:SettingsTabPage}" />
        </Tab>
    </TabBar>

</Shell>
