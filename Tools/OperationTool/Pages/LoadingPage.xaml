<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperationTool.Pages.LoadingPage"
             BackgroundColor="{DynamicResource White}">
    <ContentPage.Content>
        <Grid>
            <VerticalStackLayout
                Spacing="12"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <ActivityIndicator
                    IsRunning="{Binding IsBusy}"
                    IsVisible="{Binding IsBusy}"
                    WidthRequest="48"
                    HeightRequest="48" />
                
                <Label
                    Text="{Binding Title}"
                    FontSize="18"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center" />
                
                <Label
                    Text="{Binding StatusMessage}"
                    FontSize="13"
                    TextColor="{DynamicResource Gray600}"
                    HorizontalTextAlignment="Center" />
                
                <Frame
                    IsVisible="{Binding HasError}"
                    BorderColor="{DynamicResource Red300}"
                    BackgroundColor="{DynamicResource Red100}"
                    HasShadow="False"
                    Padding="12"
                    Margin="0,8,0,0">
                    
                    <Label
                        Text="{Binding ErrorMessage}"
                        FontSize="13"
                        TextColor="{DynamicResource Red700}" />
                </Frame>
                
                <Button
                    Text="Retry"
                    IsVisible="{Binding HasError}"
                    Command="{Binding RetryCommand}"
                    HorizontalOptions="Center"
                    Margin="0,8,0,0" />
                
            </VerticalStackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
