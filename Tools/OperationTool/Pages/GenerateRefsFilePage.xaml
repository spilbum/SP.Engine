<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperationTool.Pages.GenerateRefsFilePage">

    <ContentPage.Content>
        <ScrollView>
            <Grid Padding="16"
                  HorizontalOptions="Center">

                <Frame Padding="12"
                       HasShadow="False"
                       BorderColor="{DynamicResource Gray300}"
                       BackgroundColor="{DynamicResource White}"
                       HorizontalOptions="Center"
                       MaximumWidthRequest="1000">

                    <Grid RowSpacing="12"
                          ColumnSpacing="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Browse 영역 (경로 표시 + Browse 버튼) -->
                        <Grid Grid.Row="0">
                            <VerticalStackLayout Spacing="8">

                                <!-- Output Folder -->
                                <Grid ColumnDefinitions="100,*,Auto"
                                      ColumnSpacing="6">
                                    <Label Text="Output Folder:"
                                           VerticalTextAlignment="Center" />

                                    <Entry Grid.Column="1"
                                           Text="{Binding OutputFolder}"
                                           IsReadOnly="True" />

                                    <Button Grid.Column="2"
                                            Text="Browse"
                                            Command="{Binding BrowseOutputCommand}" />
                                </Grid>

                                <!-- Excel Folder -->
                                <Grid ColumnDefinitions="100,*,Auto"
                                      ColumnSpacing="6">
                                    <Label Text="Excel Folder:"
                                           VerticalTextAlignment="Center" />

                                    <Entry Grid.Column="1"
                                           Text="{Binding ExcelFolder}"
                                           IsReadOnly="True" />

                                    <Button Grid.Column="2"
                                            Text="Browse"
                                            Command="{Binding BrowseExcelCommand}" />
                                </Grid>

                            </VerticalStackLayout>
                        </Grid>

                        <!-- 본문: 좌측 테이블 선택 / 우측 패치 옵션 -->
                        <Grid Grid.Row="1"
                              ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="320" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Excel 테이블 목록 -->
                            <Border Grid.Column="0"
                                    Stroke="{DynamicResource Gray300}"
                                    StrokeThickness="1"
                                    Padding="8"
                                    IsEnabled="{Binding IsExcelLoaded}">

                                <Grid RowDefinitions="Auto,*" RowSpacing="8">

                                    <!-- 전체 선택 -->
                                    <HorizontalStackLayout Grid.Row="0"
                                                           Spacing="4">
                                        <CheckBox IsChecked="{Binding IsAllChecked}" />
                                        <Label Text="All"
                                               VerticalTextAlignment="Center" />
                                    </HorizontalStackLayout>

                                    <CollectionView Grid.Row="1"
                                                    ItemsSource="{Binding ExcelTables}">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid ColumnDefinitions="32,*"
                                                      ColumnSpacing="8"
                                                      Padding="0,6">

                                                    <CheckBox Grid.Column="0"
                                                              IsChecked="{Binding IsChecked}"
                                                              VerticalOptions="Start" />

                                                    <!-- 핵심 수정: Label이 늘어나고 Picker는 고정되게 (*,Auto) -->
                                                    <Grid Grid.Column="1"
                                                          ColumnDefinitions="*,Auto"
                                                          ColumnSpacing="8">

                                                        <Label Grid.Column="0"
                                                               Text="{Binding Name}"
                                                               LineBreakMode="TailTruncation"
                                                               VerticalTextAlignment="Center" />

                                                        <Picker Grid.Column="1"
                                                                ItemsSource="{Binding TargetItems}"
                                                                SelectedItem="{Binding Target}"
                                                                WidthRequest="110"
                                                                HorizontalTextAlignment="Center"
                                                                VerticalTextAlignment="Center" />
                                                    </Grid>

                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>

                                </Grid>
                            </Border>

                            <!-- 우측 옵션 -->
                            <VerticalStackLayout Grid.Column="1"
                                                 Spacing="8">

                                <HorizontalStackLayout Spacing="4">
                                    <CheckBox IsChecked="{Binding IsDevelopment}" />
                                    <Label Text="Is Development"
                                           VerticalTextAlignment="Center" />
                                </HorizontalStackLayout>

                                <!-- Origin Refs File (null 안전: 프록시 문자열 바인딩 권장) -->
                                <Border Stroke="{DynamicResource Gray300}"
                                        StrokeThickness="1"
                                        Padding="8"
                                        IsEnabled="{Binding IsOriginEnabled}"
                                        Opacity="{Binding IsOriginEnabled, Converter={StaticResource BoolToOpacityConverter}}">

                                    <VerticalStackLayout Spacing="4">
                                        <Label Text="Origin Refs File"
                                               FontAttributes="Bold" />

                                        <Picker ItemsSource="{Binding OriginRefsFiles}"
                                                ItemDisplayBinding="{Binding FileId}"
                                                SelectedItem="{Binding SelectedOriginRefsFile}"
                                                HorizontalOptions="Start" />

                                        <Editor Text="{Binding SelectedOriginRefsComment}"
                                                HeightRequest="80"
                                                AutoSize="TextChanges"
                                                IsReadOnly="True" />
                                    </VerticalStackLayout>
                                </Border>

                                <!-- Patch File -->
                                <Border Stroke="{DynamicResource Gray300}"
                                        StrokeThickness="1"
                                        Padding="8">

                                    <VerticalStackLayout Spacing="8">
                                        <Label Text="Patch File"
                                               FontAttributes="Bold" />

                                        <!-- FileId: ReadOnly + Copy 버튼 -->
                                        <HorizontalStackLayout Spacing="6">
                                            <Label Text="File ID:"
                                                   VerticalTextAlignment="Center" />

                                            <Entry Text="{Binding FileId}"
                                                   WidthRequest="80"
                                                   IsReadOnly="True" />
                                        </HorizontalStackLayout>

                                        <VerticalStackLayout Spacing="4">
                                            <Label Text="Comment:" />

                                            <!-- Auto comment일 때도 내용은 보여주고 편집만 막기 -->
                                            <Editor Text="{Binding Comment}"
                                                    HeightRequest="80"
                                                    AutoSize="TextChanges"
                                                    IsReadOnly="{Binding IsAutoComment}" />
                                        </VerticalStackLayout>

                                        <HorizontalStackLayout Spacing="12">
                                            <HorizontalStackLayout Spacing="4">
                                                <CheckBox IsChecked="{Binding IsAutoComment}" />
                                                <Label Text="Auto comment"
                                                       VerticalTextAlignment="Center" />
                                            </HorizontalStackLayout>

                                            <HorizontalStackLayout Spacing="4">
                                                <CheckBox IsChecked="{Binding IsGenerateCode}" />
                                                <Label Text="Generate code (*.cs)"
                                                       VerticalTextAlignment="Center" />
                                            </HorizontalStackLayout>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Border>
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Footer -->
                        <Grid Grid.Row="2">
                            <HorizontalStackLayout Spacing="8"
                                                   HorizontalOptions="End">

                                <Button Text="Generate"
                                        Command="{Binding GenerateCommand}"
                                        IsEnabled="{Binding CanGenerate}" />
                            </HorizontalStackLayout>
                        </Grid>

                    </Grid>
                </Frame>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
