<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OperationTool"
             x:Class="OperationTool.Pages.RefsDiffTabPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:NullToFalseConverter x:Key="NullToFalseConverter" />
            <local:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*" 
              Padding="10">
            <Grid Row="0" 
                  ColumnDefinitions="*,*,*" 
                  ColumnSpacing="20">

                <VerticalStackLayout Grid.Column="0" Spacing="8">
                    <Label Text="Base Version (Old)" FontAttributes="Bold" />

                    <Grid ColumnDefinitions="70,*,40" ColumnSpacing="4">
                        <Label Grid.Column="0"
                               Text="Schs File:" 
                               VerticalOptions="Center" />
                        <Entry Grid.Column="1"
                               Text="{Binding OldSchsPath}"
                               IsReadOnly="True"
                               HorizontalOptions="FillAndExpand" />
                        <Button Grid.Column="2"
                                Text="..." 
                                Command="{Binding BrowseOldSchsCommand}" />
                    </Grid>

                    <Grid ColumnDefinitions="70,*,40" ColumnSpacing="4">
                        <Label Grid.Column="0"
                               Text="Refs File:" 
                               VerticalOptions="Center" />
                        <Entry Grid.Column="1"
                               Text="{Binding OldRefsPath}"
                               IsReadOnly="True"
                               HorizontalOptions="FillAndExpand" />
                        <Button Grid.Column="2"
                                Text="..." 
                                Command="{Binding BrowseOldRefsCommand}" />
                    </Grid>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" 
                                     Spacing="8">
                    
                    <Label Text="Target Version (New)" FontAttributes="Bold" />
                    <Grid ColumnDefinitions="70,*,40" ColumnSpacing="4">
                        <Label Grid.Column="0"
                               Text="Schs File:" 
                               VerticalOptions="Center" />
                        <Entry Grid.Column="1"
                               Text="{Binding NewSchsPath}"
                               IsReadOnly="True"
                               HorizontalOptions="FillAndExpand" />
                        <Button Grid.Column="2"
                                Text="..." 
                                Command="{Binding BrowseNewSchsCommand}" />
                    </Grid>
                    <Grid ColumnDefinitions="70,*,40" ColumnSpacing="4">
                        <Label Grid.Column="0"
                               Text="Refs File:" 
                               VerticalOptions="Center" />
                        <Entry Grid.Column="1"
                               Text="{Binding NewRefsPath}"
                               IsReadOnly="True"
                               HorizontalOptions="FillAndExpand" />
                        <Button Grid.Column="2"
                                Text="..." 
                                Command="{Binding BrowseNewRefsCommand}" />
                    </Grid>
                </VerticalStackLayout>

                <HorizontalStackLayout Grid.Column="2"
                                       HorizontalOptions="End">
                    <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                       IsVisible="{Binding IsBusy}" />
                    <Button
                        Text="Run Diff"
                        Command="{Binding RunDiffCommand}" />
                </HorizontalStackLayout>
            </Grid>

            <Grid Row="1" 
                  ColumnDefinitions="2*,3*" 
                  ColumnSpacing="10" 
                  Margin="0,10,0,0">

                <Border Grid.Column="0" 
                        Stroke="{DynamicResource Gray500}" 
                        StrokeThickness="1">
                    
                    <VerticalStackLayout Padding="4">
                        <Label Text="Table List" FontAttributes="Bold" />
                        <CollectionView
                            ItemsSource="{Binding Tables}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedTable}">
                            <CollectionView.EmptyView>
                                <Label Text="No tables changed."
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Margin="0,10,0,0" />
                            </CollectionView.EmptyView>
                            
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*,Auto" Padding="4">
                                        <Label
                                            Grid.Column="0"
                                            Text="{Binding Name}" 
                                            VerticalOptions="Center"/>
                                        
                                        <HorizontalStackLayout 
                                            Grid.Column="1"
                                            Spacing="12"
                                            VerticalOptions="Center">
                                            <Label Text="{Binding Kind}" />
                                            <Label Text="{Binding ColumnDiffCount, StringFormat='C:{0}'}" />
                                        </HorizontalStackLayout>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>
                
                <Border Grid.Column="1"
                        Stroke="{DynamicResource Gray500}" 
                        StrokeThickness="1">
                    
                    <Grid RowDefinitions="Auto,*,*" 
                          RowSpacing="12"
                          Padding="4"
                          BindingContext="{Binding SelectedTable}">
                        
                        <StackLayout Grid.Row="0" 
                                     Orientation="Horizontal" 
                                     Spacing="10" >
                            
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="{Binding Kind}" />
                            <Label
                                Text="Primary Key Changed"
                                TextColor="Red"
                                IsVisible="{Binding PrimaryKeyChanged}" />
                        </StackLayout>
                        
                        <VerticalStackLayout Grid.Row="1" 
                                             Spacing="4">
                            
                            <Label Text="Column Changes" FontAttributes="Bold" />
                            <CollectionView ItemsSource="{Binding Columns}">
                                <CollectionView.EmptyView>
                                    <Label Text="No column changes."
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           Margin="0,10,0,0" />
                                </CollectionView.EmptyView>
                                    
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid RowDefinitions="Auto,Auto"
                                              ColumnDefinitions="*,Auto"
                                              Padding="4">
                                            
                                            <Label Grid.Row="0"
                                                   Grid.Column="0"
                                                   Text="{Binding Name}"
                                                   FontAttributes="Bold"
                                                   VerticalOptions="Center" />
                                            
                                            <Label Grid.Row="0"
                                                   Grid.Column="1"
                                                   Text="{Binding Kind}"
                                                   HorizontalOptions="End"
                                                   VerticalOptions="Center" />
                                            
                                            <HorizontalStackLayout Grid.Row="1"
                                                                   Grid.ColumnSpan="2"
                                                                   Spacing="12">
                                                
                                                <Label Text="{Binding TypeChangeText}"
                                                       IsVisible="{Binding TypeChangeText, Converter={StaticResource StringNotEmptyConverter}}" />
                                                
                                                <Label Text="{Binding KeyChangeText}"
                                                       IsVisible="{Binding HasKeyChange}" />
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="2" 
                                             Spacing="4">
                            <Label Text="Row Changes" FontAttributes="Bold" />
                            <CollectionView
                                ItemsSource="{Binding Rows}"
                                SelectionMode="Single"
                                SelectedItem="{Binding SelectedRow}">
                                <CollectionView.EmptyView>
                                    <Label Text="No row changes."
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           Margin="0,10,0,0" />
                                </CollectionView.EmptyView>
                                
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="*,Auto" Padding="4">
                                            <Label Grid.Column="0" 
                                                   Text="{Binding Key}"
                                                   VerticalOptions="Center"
                                                   LineBreakMode="TailTruncation" />
                                            
                                            <HorizontalStackLayout Grid.Column="1" 
                                                                   Spacing="12"
                                                                   VerticalOptions="Center">
                                                <Label Text="{Binding Kind}" />
                                                <Label Text="{Binding CellDiffCount, StringFormat='Cells:{0}'}" />
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                                
                            <VerticalStackLayout Spacing="4"
                                                 IsVisible="{Binding SelectedRow, Converter={StaticResource NullToFalseConverter}}">
                                <Label Text="Cell Changes" FontAttributes="Bold" />
                                
                                <CollectionView ItemsSource="{Binding SelectedRowCells}">
                                    <CollectionView.EmptyView>
                                        <Label Text="No cell changes."
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               Margin="0,10,0,0" />
                                    </CollectionView.EmptyView>
                                    
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid ColumnDefinitions="2*,Auto,2*,2*" Padding="2">
                                                <Label Grid.Column="0"
                                                       Text="{Binding ColumnName}"
                                                       VerticalOptions="Center" />
                                                
                                                <Label Grid.Column="1"
                                                       Text="â†’"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center" />
                                                
                                                <Label Grid.Column="2"
                                                       Text="{Binding OldText}"
                                                       TextColor="Gray"
                                                       VerticalOptions="Center" />
                                                
                                                <Label Grid.Column="3"
                                                       Text="{Binding NewText}"
                                                       VerticalOptions="Center" />
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
