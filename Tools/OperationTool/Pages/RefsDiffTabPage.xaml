<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OperationTool"
             x:Class="OperationTool.Pages.RefsDiffTabPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:NullToFalseConverter x:Key="NullToFalseConverter" />
            <local:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*" Padding="10">
            
            <Grid Row="0" ColumnDefinitions="*,*" ColumnSpacing="20">

                <VerticalStackLayout Grid.Column="0" Spacing="8">
                    <Label Text="Base Version (Old)" FontAttributes="Bold" />

                    <HorizontalStackLayout Spacing="4">
                        <Label Text="Schs File:" VerticalOptions="Center" WidthRequest="70" />
                        <Entry Text="{Binding OldSchsPath}" WidthRequest="250" HorizontalOptions="Fill" />
                        <Button Text="..." Command="{Binding BrowseOldSchsCommand}" WidthRequest="40" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="4">
                        <Label Text="Refs File:" VerticalOptions="Center" WidthRequest="70" />
                        <Entry Text="{Binding OldRefsPath}" WidthRequest="250" HorizontalOptions="Fill" />
                        <Button Text="..." Command="{Binding BrowseOldRefsCommand}" WidthRequest="40" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" Spacing="8">
                    <Label Text="Target Version (New)" FontAttributes="Bold" />

                    <HorizontalStackLayout Spacing="4">
                        <Label Text="Schs File:" VerticalOptions="Center" WidthRequest="70" />
                        <Entry Text="{Binding NewSchsPath}" WidthRequest="250" HorizontalOptions="Fill" />
                        <Button Text="..." Command="{Binding BrowseNewSchsCommand}" WidthRequest="40" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="4">
                        <Label Text="Refs File:" VerticalOptions="Center" WidthRequest="70" />
                        <Entry Text="{Binding NewRefsPath}" WidthRequest="250" HorizontalOptions="Fill" />
                        <Button Text="..." Command="{Binding BrowseNewRefsCommand}" WidthRequest="40" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <HorizontalStackLayout
                    Grid.ColumnSpan="2"
                    Margin="0,10,0,0"
                    HorizontalOptions="End">
                    <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
                    <Button
                        Text="Run Diff"
                        Margin="10,0,0,0"
                        Command="{Binding RunDiffCommand}" />
                </HorizontalStackLayout>
            </Grid>

            <Grid Row="1" ColumnDefinitions="2*,3*" ColumnSpacing="10" Margin="0,10,0,0">

                <Border Stroke="{DynamicResource Gray500}" StrokeThickness="1" Grid.Column="0">
                    <VerticalStackLayout Padding="4">
                        <Label Text="Table List" FontAttributes="Bold" />
                        <CollectionView
                            ItemsSource="{Binding Tables}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedTable, Mode=TwoWay}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*,Auto" Padding="4">
                                        <Label
                                            Grid.Column="0"
                                            Text="{Binding Name}" 
                                            VerticalOptions="Center"/>
                                        
                                        <HorizontalStackLayout 
                                            Grid.Column="1"
                                            Spacing="12"
                                            VerticalOptions="Center">
                                            <Label Text="{Binding Kind}" />
                                            <Label Text="{Binding ColumnDiffCount, StringFormat='C:{0}'}" />
                                        </HorizontalStackLayout>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>
                
                <Border Stroke="{DynamicResource Gray500}" StrokeThickness="1" Grid.Column="1">
                    <Grid RowDefinitions="Auto,*,*" Padding="4"
                          BindingContext="{Binding SelectedTable}">

                        <StackLayout Orientation="Horizontal" Spacing="10" Grid.Row="0">
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="{Binding Kind}" />
                            <Label
                                Text="Primary Key Changed"
                                TextColor="Red"
                                IsVisible="{Binding PrimaryKeyChanged}" />
                        </StackLayout>

                        <VerticalStackLayout Grid.Row="1" Spacing="4">
                            <Label Text="Column Changes" FontAttributes="Bold" />
                            
                            <CollectionView ItemsSource="{Binding Columns}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid RowDefinitions="Auto,Auto"
                                              ColumnDefinitions="*,Auto"
                                              Padding="4">
                                            
                                            <Label Grid.Row="0"
                                                   Grid.Column="0"
                                                   Text="{Binding Name}"
                                                   FontAttributes="Bold"
                                                   VerticalOptions="Center" />
                                            
                                            <Label Grid.Row="0"
                                                   Grid.Column="1"
                                                   Text="{Binding Kind}"
                                                   HorizontalOptions="End"
                                                   VerticalOptions="Center" />
                                            
                                            <HorizontalStackLayout Grid.Row="1"
                                                                   Grid.ColumnSpan="2"
                                                                   Spacing="12">
                                                
                                                <Label Text="{Binding TypChangeText}"
                                                       IsVisible="{Binding TypeChangeText, Converter={StaticResource StringNotEmptyConverter}}" />
                                                
                                                <Label Text="{Binding KeyChangeText}"
                                                       IsVisible="{Binding HasKeyChange}" />
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="2" Spacing="4">
                            <Label Text="Row Changes" FontAttributes="Bold" />
                            
                            <CollectionView
                                ItemsSource="{Binding Rows}"
                                SelectionMode="Single"
                                SelectedItem="{Binding SelectedRow}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="*,Auto" Padding="4">
                                            <Label Grid.Column="0" 
                                                   Text="{Binding Key}"
                                                   VerticalOptions="Center"
                                                   LineBreakMode="TailTruncation" />
                                            
                                            <HorizontalStackLayout Grid.Column="1" 
                                                                   Spacing="12"
                                                                   VerticalOptions="Center">
                                                <Label Text="{Binding Kind}" />
                                                <Label Text="{Binding CellDiffCount, StringFormat='Cells:{0}'}" />
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                            
                            <VerticalStackLayout Spacing="4"
                                                 IsVisible="{Binding SelectedRow, Converter={StaticResource NullToFalseConverter}}">
                                <Label Text="Cell Changes" FontAttributes="Bold" />
                                
                                <CollectionView ItemsSource="{Binding SelectedRowCells}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid ColumnDefinitions="2*,Auto,2*,2*" Padding="2">
                                                <Label Grid.Column="0"
                                                       Text="{Binding ColumnName}"
                                                       VerticalOptions="Center" />
                                                
                                                <Label Grid.Column="1"
                                                       Text="â†’"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center" />
                                                
                                                <Label Grid.Column="2"
                                                       Text="{Binding OldText}"
                                                       TextColor="Gray"
                                                       VerticalOptions="Center" />
                                                
                                                <Label Grid.Column="3"
                                                       Text="{Binding NewText}"
                                                       VerticalOptions="Center" />
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
